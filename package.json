{
  "name": "rdf-dataset-fragmenter",
  "version": "2.4.0",
  "description": "Fragments an RDF dataset into multiple parts",
  "keywords": [
    "rdf",
    "rdfjs",
    "dataset",
    "fragmenter",
    "decentralization"
  ],
  "main": "index.js",
  "typings": "index",
  "repository": "git@github.com:SolidBench/rdf-dataset-fragmenter.js.git",
  "author": "Ruben Taelman <rubensworks@gmail.com>",
  "bugs": {
    "url": "https://github.com/SolidBench/rdf-dataset-fragmenter.js/issues"
  },
  "homepage": "https://github.com/SolidBench/rdf-dataset-fragmenter.js#readme",
  "bin": {
    "rdf-dataset-fragmenter": "bin/runner.js"
  },
  "license": "MIT",
  "lsd:module": true,
  "files": [
    "bin/**/*.d.ts",
    "bin/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "lib/**/*.js.map",
    "index.d.ts",
    "index.js.map",
    "index.js",
    "components"
  ],
  "dependencies": {
    "@rdfjs/types": "*",
    "@shexjs/parser": "1.0.0-alpha.26",
    "@types/async-lock": "^1.4.0",
    "@types/lru-cache": "^5.0.0",
    "@types/mkdirp": "^1.0.0",
    "@types/semver": "^7.5.7",
    "async-lock": "^1.4.0",
    "componentsjs": "^5.0.0",
    "jsonld-streaming-parser": "^3.3.0",
    "lru-cache": "^6.0.0",
    "mkdirp": "^1.0.0",
    "rdf-parse": "^2.0.0",
    "rdf-serialize": "^2.0.0",
    "rdf-string": "^1.6.0",
    "rdf-terms": "^1.11.0",
    "relative-to-absolute-iri": "^1.0.0",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@rubensworks/eslint-config": "^2.0.0",
    "@types/jest": "^29.0.0",
    "arrayify-stream": "^2.0.0",
    "componentsjs-generator": "^3.0.0",
    "eslint": "^7.0.0",
    "husky": "^4.3.0",
    "jest": "^29.0.0",
    "jest-rdf": "^1.0.0",
    "manual-git-changelog": "^1.0.0",
    "rdf-data-factory": "^1.1.0",
    "stream-to-string": "^1.2.0",
    "streamify-array": "^1.0.0",
    "streamify-string": "^1.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run build && yarn run lint && yarn run test"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "scripts": {
    "test": "jest ${1}",
    "test-watch": "jest ${1} --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "yarn run build:ts && yarn run build:components",
    "build:components": "componentsjs-generator -s lib -r rdfdf",
    "build:ts": "tsc",
    "validate": "yarn ls",
    "prepare": "yarn run build",
    "version": "manual-git-changelog onversion"
  }
}
